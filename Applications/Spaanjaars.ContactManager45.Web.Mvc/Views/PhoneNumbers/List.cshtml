@model IEnumerable<Spaanjaars.ContactManager45.Web.Mvc.Models.DisplayPhoneNumber>
@{
  ViewBag.Title = "Phone numbers";
}
<h2>@ViewBag.Title</h2>
@if (Model.Any())
{
  <table>
    <tr>
      <th>Phone number</th>
      <th></th>
    </tr>
    @foreach (var item in Model)
    {
      <tr>
        <td>
          @Html.DisplayFor(modelItem => item.Number)
        </td>
        <td>
          @Html.ActionLink("Edit", "Edit", new {item.Id, ViewBag.PersonId}) |
          @Html.ActionLink("Details", "Details", new {item.Id, ViewBag.PersonId}) |
          @Html.ActionLink("Delete", "Delete", new {item.Id, ViewBag.PersonId})
        </td>
      </tr>
    }
  </table>
  <br />
  <br />
}
else
{
  <p>No phone numbers found.</p>
}
<p>
  @Html.ActionLink("Add new phone number", "Create", new { ViewBag.PersonId }) | 
  @Html.ActionLink("Back to people list", "Index", "People", new { ViewBag.PersonId }, null)
</p>
