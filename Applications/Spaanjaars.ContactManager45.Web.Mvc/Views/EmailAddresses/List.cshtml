@model IEnumerable<Spaanjaars.ContactManager45.Web.Mvc.Models.DisplayEmailAddress>
@{
  ViewBag.Title = "E-mail addresses";
}
<h2>@ViewBag.Title</h2>
@if (Model.Any())
{
  <table>
    <tr>
      <th>E-mail address</th>
      <th></th>
    </tr>
    @foreach (var item in Model)
    {
      <tr>
        <td>
          @Html.DisplayFor(modelItem => item.EmailAddressText)
        </td>
        <td>
          @Html.ActionLink("Edit", "Edit", new { item.Id, ViewBag.PersonId }) |
            @Html.ActionLink("Details", "Details", new { item.Id, ViewBag.PersonId }) |
            @Html.ActionLink("Delete", "Delete", new { item.Id, ViewBag.PersonId })
        </td>
      </tr>
    }
  </table>
  <br />
  <br />
}
else
{
  <p>No e-mail addresses found.</p>
}
<p>
  @Html.ActionLink("Add new e-mail address", "Create", new { ViewBag.PersonId }) | 
  @Html.ActionLink("Back to people list", "Index", "People", new { ViewBag.PersonId }, null)
</p>
