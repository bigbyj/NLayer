@model Spaanjaars.ContactManager45.Web.Mvc.Models.DisplayEmailAddress
@{
  ViewBag.Title = "Delete e-mail address?";
}
<h2>@ViewBag.Title</h2>
<p>Are you sure you want to delete this e-mail address?</p>
@Html.Partial("_Details", Model)
@using (Html.BeginForm())
{
  @Html.HiddenFor(x => x.PersonId)
  <p>
    <input type="submit" value="Delete" />
    @Html.ActionLink("Cancel", "List", new { PersonId = Model.PersonId })
  </p>
}


